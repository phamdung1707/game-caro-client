<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/background_home"
    android:orientation="vertical"
    tools:context=".screens.HomeScr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_info"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-4dp"/>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_username_home_scr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/linked"
                android:text="Kerhoangde"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/linked"
                android:text="Lv.1+0.0%"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="162dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/txt_money_home_scr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/linked"
                android:text="1.000.000.000$"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="13dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="166dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/txt_rate_home_scr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/linked"
                android:text="1000 / 1000"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_card"
                android:scaleType="centerCrop"/>
            <Button
                android:id="@+id/btn_create_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:text="Tạo phòng"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_card"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btn_join_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:text="Tham gia"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:clickable="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_card"
                android:scaleType="centerCrop"/>
            <Button
                android:id="@+id/btn_bot_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Đấu với máy"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#00FFFFFF"
                android:textAllCaps="false"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:id="@+id/btn_send_chat_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/img_btn_send"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/linked"
            android:text="Gửi" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/btn_send_chat_global"
            android:background="@drawable/boder_edittext_chat_global"
            android:hint="chat thế giới"
            android:textColorHint="#30f00000"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/linked"/>

    </RelativeLayout>

</RelativeLayout>