<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".screens.HomeScr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản: kerhoangde"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã thắng: 1000 / 1000"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tỉ lệ thắng: 100%"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.000.000.000$"
                android:textSize="20sp"
                android:padding="10dp"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1877f2"
                android:text="+"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:backgroundTint="#1877f2"
                android:text="Tạo phòng" />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:backgroundTint="#1877f2"
                android:text="Tham gia" />

            <Button
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:backgroundTint="#1877f2"
                android:text="Đấu với máy" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>